<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title" id="modal-sample-label">
                Create Deliverable
            </h4>
        </div>
        <div class="modal-body">
            <form action="/save{{page[:-1]}}" id="itemForm" method="POST">
                <div class="form-group d-none">
                    <label for="itemID">id</label>
                    <input type="number" class="form-control" name="itemID" id="itemName" placeholder="" value="{{deliverable['id']}}">
                </div>
                <div class="form-group">
                    <label for="itemName">Name</label>
                    <input type="text" class="form-control" name="itemName" id="itemName" placeholder="" value="{{deliverable['title']}}">
                </div>
                <div class="form-group">
                    <label for="due_date">Due Date</label>
                    <input type="date" id="dueDate" name="due_date" class="form-control" placeholder="mm/dd/yyyy" value="{{deliverable['due_date']}}">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class='form-control' name="description">{{deliverable['description']}}</textarea>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" onclick="submitItem()" id="itemFormSaveBTN"  class="btn btn-primary">
                Add
            </button>
            <button type="button" class="btn btn-info" data-dismiss="modal">
                Cancel
            </button>
        </div>
    </div>
</div>