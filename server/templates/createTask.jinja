<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title" id="modal-sample-label">
                Create Task
            </h4>
        </div>
        <div class="modal-body">
            <form action="/save{{page[:-1]}}" id="itemForm" method="POST">
                <div class="form-group d-none">
                    <label for="itemID">id</label>
                    <input type="number" class="form-control" name="itemID" id="itemName" placeholder=""
                        value="{{task['id']}}">
                </div>
                <div class="form-group">
                    <label for="type">Task Type</label>
                    <div class="combobox">
                        <select name="type" class="form-control">
                            {%if task['type']==1%}
                            <option value="1">Milestone</option>
                            <option value="0">Regular Task</option>
                            {% else %}
                            <option value="0">Regular Task</option>
                            <option value="1">Milestone</option>

                            {%endif%}
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="itemName">Name</label>
                    <input type="text" class="form-control" name="itemName" id="itemName" placeholder=""
                        value="{{task['title']}}">
                </div>
                <p class="form-group-label">Resource Assigned</p>
                <div class="form-group scroll pl-3 pr-3 pt-0">
                    {% for resource in resources  %}
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" name="resources[]"  value="{{resource['id']}}" 
                                {% if  resource['id'] in resourcesAssigned %} checked {% endif %}
                                >
                                <span>{{resource['title']}}</span>
                            </label>
                        </div>
                    {% endfor %}
                </div>
                <p class="form-group-label">Issues</p>
                <div class="form-group scroll pl-3 pr-3 pt-0">
                    {% for issue in issues  %}
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" name="issues[]"  value="{{issue['id']}}" 
                                {% if  issue['id'] in issuesAssigned %} checked {% endif %}
                                >
                                <span>{{issue['title']}}</span>
                            </label>
                        </div>
                    {% endfor %}
                </div>
                <div class="form-group">
                    <label for="expected_effort">Expected Effort</label>
                    <input type="text" class="form-control" name="expected_effort" placeholder="" value="{{task['expected_effort']}}">
                </div>
                <div class="form-group">
                    <label for="actual_effort">Actual Effort</label>
                    <input type="text" class="form-control" name="actual_effort" placeholder="" value="{{task['actual_effort']}}">
                </div>
                <div class="form-group">
                    <label for="expected_duration">Expected Duration</label>
                    <input type="text" class="form-control" name="expected_duration" placeholder="" value="{{task['expected_duration']}}">
                </div>
                <div class="form-group">
                    <label for="actual_duration">Actual Duration</label>
                    <input type="text" class="form-control" name="actual_duration" placeholder="" value="{{task['actual_duration']}}">
                </div>
                <div class="form-group">
                    <label for="effort_completed">Effort Complete</label>
                    <input type="text" class="form-control" name="effort_completed" placeholder="" value="{{task['effort_completed']}}">
                </div>
                <div class="form-group">
                    <label for="percent_complete">Percent Complete</label>
                    <input type="text" class="form-control" name="percent_complete" placeholder="" value="{{task['percent_complete']}}">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class='form-control' name="description">{{task['description']}}</textarea>
                </div>
                <p class="form-group-label">Predecessor Tasks</p>
                <div class="form-group scroll pl-3 pr-3 pt-0">
                    {% for task in tasks  %}
                    {% if task['task_id'] is none or task['task_id']==task['id']%}
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="tasks[]" class="tasks" value="{{task['id']}}"
                                {% if task['task_id']==task['id'] %} checked {% endif %}>
                            <span>{{task['title']}}</span>
                        </label>
                    </div>
                    {% endif %}
                    {% endfor %}
                </div>
                <p class="form-group-label">Successor Tasks</p>
                <div class="form-group scroll pl-3 pr-3 pt-0">
                    {% for task in tasks  %}
                    {% if task['task_id'] is none or task['task_id']==task['id']%}
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="tasks[]" class="tasks" value="{{task['id']}}"
                                {% if task['task_id']==task['id'] %} checked {% endif %}>
                            <span>{{task['title']}}</span>
                        </label>
                    </div>
                    {% endif %}
                    {% endfor %}
                </div>

            </form>
        </div>
        <div class="modal-footer">
            <button type="button" onclick="submitItem()" id="itemFormSaveBTN" class="btn btn-primary">
                Add
            </button>
            <button type="button" class="btn btn-info" data-dismiss="modal">
                Cancel
            </button>
        </div>
    </div>
</div>